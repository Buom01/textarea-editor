{
  "name": "textarea-editor",
  "version": "0.0.1",
  "description": "Simple markdown editor for textareas",
  "main": "build/index.js",
  "scripts": {
    "build": "mkdir -p build && browserify index.js -o build/index.js --s TextareaEditor",
    "watch": "watchify example/index.js -o example/bundle.js -dv",
    "serve": "ecstatic -p 3000 example",
    "start": "npm run serve & npm run watch",
    "test": "npm run build && mocha-phantomjs -R spec test/testrunner.html",
    "prepublish": "npm run build"
  },
  "browserify": {
    "transform": [["babelify", { "presets": ["es2015"] }]]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eivindfjeldstad/textarea-editor.git"
  },
  "keywords": [
    "textarea",
    "markdown",
    "editor"
  ],
  "author": "Eivind Fjeldstad <eivind.fjeldstad@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eivindfjeldstad/textarea-editor/issues"
  },
  "homepage": "https://github.com/eivindfjeldstad/textarea-editor#readme",
  "devDependencies": {
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "ecstatic": "^1.4.0",
    "mocha": "^2.4.5",
    "mocha-phantomjs": "^4.0.2",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "escape-string-regexp": "^1.0.5"
  },
  "files": ["build"]
}
